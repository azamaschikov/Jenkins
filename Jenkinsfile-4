pipeline {

    agent any

    options {
        disableConcurrentBuilds()
        buildDiscarder(
            logRotator(
                numToKeepStr:"3",
                daysToKeepStr: "7",
                artifactDaysToKeepStr: "7",
                artifactNumToKeepStr: "3"
            )
        )
        ansiColor("gnome-terminal")
    }

    environment {
        PROJECT_NAME = "My Template For Pipelines"
        PROJECT_AUTHOR = "Aleksandr Zamaschikov"
    }

    parameters {
        string(name: "URL", defaultValue: "http://example.com")
    }

    stages {
        stage("Get Page") {
            steps {
                script {
                    def request = httpRequest ignoreSslErrors: true, url: "${params.URL}", wrapAsMultipart: false
                    println("Status: "+request.status)
                    println("Content: "+request.content)
                }
            }
        }
    }

    post {
        success {
            echo "Step was success"
        }

        failure {
            echo "Step was failure"
        }

        always {
            cleanWs()
        }
    }
}
