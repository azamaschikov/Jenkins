pipeline {

    agent any

    options {
        disableConcurrentBuilds()
        buildDiscarder(
        logRotator(
            numToKeepStr:"3",
            daysToKeepStr: "7",
            artifactDaysToKeepStr: "7",
            artifactNumToKeepStr: "3"
        )
    )
    }

    environment {
        PROJECT_NAME = "My Template For Pipelines"
        PROJECT_AUTHOR = "Aleksandr Zamaschikov"
    }

    stages {
        stage("Greetings") {
            steps {
                echo "Hello, World"
                echo "${env.PROJECT_NAME} by ${env.PROJECT_AUTHOR}"
            }
        }
    }
}
