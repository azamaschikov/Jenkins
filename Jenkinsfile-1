pipeline {

    agent any

    environment {
        PROJECT_NAME   = "My Template For Pipelines"
        PROJECT_AUTHOR = "Aleksandr Zamaschikov"
    }

    /*
    tools {}
    */

    options {
        disableConcurrentBuilds()
        buildDiscarder(
            logRotator(
                numToKeepStr:"3",
                daysToKeepStr: "7",
                artifactDaysToKeepStr: "7",
                artifactNumToKeepStr: "3"
            )
        )
        ansiColor("gnome-terminal")
    }

    triggers {
        /* Запускать конвейер по расписанию
        cron("*/5 * * * *")
        */

        /* Запускать конвейер по опросу SCM
        pollSCM("*/5 * * * *")
        */

        /* Запускать конвейер при успешном выполнении другого конвейера
        upstream(
                 upstreamProjects: "MyJob",
                 threshold: hudson.model.Result.SUCCESS
        )
        */
    }

    /*
    parameters {}
    */

    stages {
        stage("Building step") {
            steps {
                echo "Start of Stage Build"
                echo "Building ..."
                echo "End of Stage Build"
            }
        }
        
        stage("Testing step") {
            steps {
                echo "Start of Stage Test"
                echo "Testing ..."
                echo "End of Stage Test"
            }
        }
        
        stage("Deploying step") {
            steps {
                echo "Start of Stage Deploy"
                echo "Deploying ..."
                echo "End of Stage Deploy"
            }
        } 
    }

    post {
        success {
            echo "Success build"
        }

        failure {
            echo "Failure build"
        }

        always {
            cleanWs()
        }
    }
}
