pipeline {
    agent any
    
    environment {
        PROJECT_NAME = "My Template For Pipelines"
        PROJECT_AUTHOR = "Aleksandr Zamaschikov"
    }

    stages {
        stage('Building step') {
            steps {
                echo 'Start of Stage Build'
                echo 'Building ...'
                echo 'End of Stage Build'
            }
        }
        
        stage('Testing step') {
            steps {
                echo 'Start of Stage Test'
                echo 'Testing ...'
                echo 'End of Stage Test'
            }
        }
        
        stage('Deploying step') {
            steps {
                echo 'Start of Stage Deploy'
                echo 'Deploying ...'
                echo 'End of Stage Deploy'
            }
        } 
    }
}
