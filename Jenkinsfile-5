def statusPage(target) {
    response = httpRequest(
        ignoreSslErrors: true,
        wrapAsMultipart: false,
        url: target
    )

    if (response.status == 200) {
        echo "ok"
    } else {
        echo "fail"
    }
}

pipeline {

    agent any

    environment {
        PROJECT_NAME   = "My Template For Pipelines"
        PROJECT_AUTHOR = "Aleksandr Zamaschikov"
    }

    /*
    tools {}
    */

    options {
        disableConcurrentBuilds()
        buildDiscarder(
            logRotator(
                numToKeepStr:"3",
                daysToKeepStr: "7",
                artifactDaysToKeepStr: "7",
                artifactNumToKeepStr: "3"
            )
        )
        ansiColor("gnome-terminal")
    }

    /*
    triggers {}
    */

    /*
    parameters {}
    */

    stages {
        stage("Get Page") {
            steps {
                statusPage("http://example.com")
            }
        }

    }

    post {
        success {
            echo "Success build"
        }

        failure {
            echo "Failure build"
        }

        always {
            cleanWs()
        }
    }
}

